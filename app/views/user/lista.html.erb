<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Age</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <th scope="row"><%= user[:id] %></th>
        <td><%= user[:name] %></td>
        <td><%= user[:idade] %></td>
        <td><%= link_to "show", show_path(id: user[:id]), class: "btn btn-secondary"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
